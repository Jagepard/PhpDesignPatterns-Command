#!/usr/bin/env php
<?php

namespace Behavioral\Command;

require_once 'vendor/autoload.php';

$registry = new CommandRegistry(new Lamp());

$registry->setCommand(new TurnOnCommand(), 'on');
$registry->setCommand(new TurnOffCommand(), 'off');
$registry->setCommand(new ToggleCommand(), 'toggle');

$registry->getCommand('on');
$registry->getCommand('off');

$registry->getCommand('toggle');
$registry->getCommand('toggle');
